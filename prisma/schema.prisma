generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String    @id // ID tá»« Clerk
  email        String    @unique
  firstName    String?
  lastName     String?
  imageUrl     String?
  username     String?   @unique
  lastSignInAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  telegramId       String?
  telegramUsername String?

  socialCredentials SocialCredential[]

  @@map("users")
}

model Post {
  id                 String           @id @default(uuid())
  platform           String
  metadata           Json
  publicationTime    DateTime
  socialCredentialID String
  socialCredential   SocialCredential @relation(fields: [socialCredentialID], references: [id])
  status             String
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  publishedPost PublishedPost? @relation("PostToPublishedPost")

  @@map("posts")
}

model PublishedPost {
  id        String
  postId    String
  metadata  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post Post @relation("PostToPublishedPost", fields: [id], references: [id])

  @@id([id, postId])
  @@unique([id])
  @@map("published_posts")
}

model SocialCredential {
  id            String   @id @default(uuid())
  socialOwnerId String
  socialId      String
  platform      String
  credentials   Json
  metadata      Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id])

  Post Post[]

  @@unique([userId, socialId])
  @@map("social_credentials")
}
